{
    "name": "grinch",
    "description": "Flexible end-to-end API testing library.",
    "license": "ISC",
    "version": "1.0.0",
    "author": "TarhunchiKKK",
    "scripts": {
        "build": "vite build",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "knip": "knip",
        "test:expectations": "npx ts-node ./tests/main.grinch.ts expectations",
        "test:grouping": "npx ts-node ./tests/main.grinch.ts grouping",
        "test:state": "npx ts-node ./tests/main.grinch.ts state",
        "test:reporting": "npx ts-node ./tests/main.grinch.ts reporting",
        "test:reusable": "npx ts-node ./tests/main.grinch.ts  reusable_tests"
    },
    "main": "./dist/grinch.umd.js",
    "module": "./dist/grinch.mjs",
    "types": "./dist/index.d.ts",
    "files": ["dist"],
    "exports": {
        ".": {
            "import": "./dist/grinch.mjs",
            "require": "./dist/grinch.umd.js"
        }
    },
    "engines": {
        "node": ">=20.19.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@faker-js/faker": "^9.9.0",
        "@types/node": "^24.5.0",
        "eslint": "^9.33.0",
        "globals": "^16.3.0",
        "jiti": "^2.5.1",
        "knip": "^5.62.0",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.39.1",
        "vite": "^7.1.4",
        "vite-plugin-dts": "^4.5.4",
        "zod": "^4.0.17"
    }
}
